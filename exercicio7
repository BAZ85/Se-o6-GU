soma = 0

for num in range(1, 11):
    numero = int(input(f"Digite o valor {num}/10: "))
    if numero < 0:
        numero = int(input(f"O numero digitado é negativo. Digite o valor {num}/10: "))
        if numero > 0:
            soma = soma + numero
    else:
        soma = soma + numero

media = soma / num

print(f"A media dos 10 valores é igual a {media:.2f}")
